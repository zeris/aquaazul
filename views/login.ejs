<!DOCTYPE html>
<html>
    <head>
        <title>Aqua azul - Login</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <%- include('./partials/head'); %>
    </head>
    <body class="background-login">
      <div class="container">
         <div class="row Absolute-Center is-Responsive">
            <div class="col-12 transparent-header">
               <form class="" action="/login" method="POST">
                  <div class="form-group col-12 justify-content-center d-flex">
                     <img class="product-card-image" src="./images/aquaazul-logo.png" style="max-width: 130px; width:100%;"/>
                  </div>
                  <div class="form-group">
                     <div class="col-12 justify-content-center d-flex">
                        <h5>Correo electrónico</h5>
                     </div>
                     <div class="col-12 justify-content-center d-flex">
                        <input class="form-control" type="email" name="username"/>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="col-12 justify-content-center d-flex">
                        <h5>Contraseña</h5>
                     </div>
                     <div class="col-12 justify-content-center d-flex">
                        <input type="password" class="form-control" name="password"/>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="col-12 justify-content-center d-flex">
                        <input class="btn btn-primary" type="submit" value="Login"/>
                     </div>
                  </div>
              </form>
            </div>
         </div>
      </div>
    </body>
</html>