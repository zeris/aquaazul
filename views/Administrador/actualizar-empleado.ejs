<!DOCTYPE html>
<html>
    <head>
        <title>Aqua azul - Actualizar Empleado</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <%- include('./partials/head'); %>
    </head>
    <body>
        <%- include('./partials/navbar'); %>
        <div class="row all-area">
         <div class="col-lg-3 col-md-12 col-12">
            <%- include('./partials/menu-empleados'); %>
         </div>
         <div class="col-lg-9 col-md-12 col-12">
            <div class="content container">
               <div class="row justify-content-center top-margin-3">
                  <h3 class="text-center">Ingrese los datos a modificar del empleado</h3>
               </div>
               <div class="row justify-content-center top-margin-5">
                  <form action="/administrador/empleados/actualizar/<%= empleado.ID_USUARIO %>" method="POST">
                     <div class="form-group">
                        <div class="col-12">
                           <h5>Nombre</h5>
                           <input class="form-control" type="text" name="nombre" value="<%= empleado.NOMBRE %>"/>
                        </div>
                     </div>
                     <div class="form-group">
                         <div class="col-12">
                            <h5>Apellido Paterno</h5>
                            <input class="form-control" type="text" name="apellidoPaterno" value="<%= empleado.APELLIDO_P %>"/>
                         </div>
                      </div>
                      <div class="form-group">
                         <div class="col-12">
                            <h5>Apellido Materno</h5>
                            <input class="form-control" type="text" name="apellidoMaterno" value="<%= empleado.APELLIDO_M %>"/>
                         </div>
                      </div>
                      <div class="form-group">
                         <div class="col-12">
                            <h5>Email</h5>
                            <input class="form-control" type="text" name="email" value="<%= empleado.EMAIL%>"/>
                         </div>
                      </div>
                     <div class="form-group">
                        <div class="col-12 justify-content-center d-flex">
                           <input class="btn btn-primary col-12" type="submit" value="Actualizar Empleado"/>
                        </div>
                     </div>          
                 </form>
               </div>
            </div>
         </div>
    </body>
</html>