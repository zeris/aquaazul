<!DOCTYPE html>
<html>
    <head>
        <title>Aqua azul - Administrar Empleados</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <%- include('./partials/head'); %>
    </head>
    <body>
        <%- include('./partials/navbar'); %>
        <div class="row all-area">
            <div class="col-lg-3 col-md-12 col-12">
                <%- include('./partials/menu-empleados'); %>
            </div>
            <div class="col-lg-9 col-md-12 col-12">
                <div class="content">
                    <% if(alertaModulos) { %>
                        <div class="alert alert-info">
                            <button class="close" data-dismiss="alert"><span>&times;</span></button>
                            <%= mensajeAlertaModulos %>
                        </div>
                    <% } %>
                    <h1 class="text-center">Administrar empleados</h1>
                    <% if(busqueda){ %>
                        <h2 class="text-center">Resultados de la busqueda</h2>
                        <div class="container">
                            <%- include('./partials/contenedor-empleados-buscador'); %>
                        </div>
                    <% }else{ %>
                        <h3 class="text-center">No se han buscado empleados</h3>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html>