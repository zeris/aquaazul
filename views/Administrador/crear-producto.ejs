<!DOCTYPE html>
<html>
    <head>
        <title>Aqua azul - Crear Producto</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <%- include('./partials/head'); %>
    </head>
    <body>
        <%- include('./partials/navbar'); %>
        <div class="row all-area">
         <div class="col-lg-3 col-md-12 col-12">
            <%- include('./partials/menu-productos'); %>
         </div>
         <div class="col-lg-9 col-md-12 col-12">
            <div class="content container">
               <% if(error) { %>
                  <div class="alert alert-danger">
                      <button class="close" data-dismiss="alert"><span>&times;</span></button>
                      <%= mensajeError %>
                  </div>
              <% } %>
               <div class="row justify-content-center top-margin-3">
                  <h3 class="text-center">Ingrese datos para crear producto</h3>
               </div>
               <div class="row justify-content-center top-margin-5">
                  <form action="./crear" method="POST" enctype="multipart/form-data">
                     <div class="form-group">
                        <div class="col-12">
                           <h5>Nombre</h5>
                           <input class="form-control" type="text" name="nombre" />
                        </div>
                     </div>
                     <div class="form-group">
                         <div class="col-12">
                            <h5>Precio</h5>
                            <input class="form-control" type="number" name="precio" />
                         </div>
                      </div>
                      <div class="form-group">
                         <div class="col-12">
                            <h5>Cantidad</h5>
                            <input class="form-control" type="number" name="cantidad" />
                         </div>
                      </div>
                      <div class="form-group">
                         <div class="col-12">
                            <h5>Marca</h5>
                            <input class="form-control" type="text" name="marca" />
                         </div>
                      </div>
                      <div class="form-group">
                         <div class="col-12">
                            <h5>Descripción</h5>
                            <input class="form-control" type="text" name="descripcion" />
                         </div>
                      </div>
                      <div class="form-group">
                        <div class="col-12">
                           <h5>Imágen del producto</h5>
                           <input type="file" class="form-control-file" name="imagen" accept="image/x-png,image/gif,image/jpeg" />
                        </div>
                     </div>
                     <div class="form-group">
                        <div class="col-12 justify-content-center d-flex">
                           <input class="btn btn-primary col-12" type="submit" value="Crear Producto"/>
                        </div>
                     </div>          
                 </form>
               </div>
            </div>
         </div>
        
        
    </body>
</html>